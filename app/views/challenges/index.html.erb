<%- model_class = Challenge -%>
<div class="page-header">
  <h1>My Challenges</h1>
</div>

<% if @my_challenges && @my_challenges.count > 0 %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:date) %></th>
        <th><%= model_class.human_attribute_name(:description) %></th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @my_challenges.each do |challenge| %>
        <tr>
          <td><%= challenge.id %></td>
            <td><%= challenge.date %></td>
            <td><%= challenge.description %></td>
          <td><%=l challenge.created_at, format: :long %></td>
          <td>
            <%= link_to challenge_path(challenge), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
              <%= glyph 'info-sign' %>
            <%- end -%>
            <%= link_to challenge_path(challenge), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
              <%= glyph 'remove' %>
            <%- end -%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_challenge_path,
            :class => 'btn btn-primary' %>
